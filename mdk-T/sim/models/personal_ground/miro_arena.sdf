<sdf version="1.5">
  <model name="ground">
    <static>true</static>
    <link name="ground_link">
      <visual name="ground_visual">
        <pose>0 0 -0.005 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>1.250</radius>  <!-- 可以根据需要调整地面的半径 -->
            <length>0.010</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/White</name>
          </script>
        </material>
      </visual>
      <collision name="ground_collision">
        <pose>0 0 -0.005 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>1.250</radius>  <!-- 与视觉部分保持一致 -->
            <length>0.010</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>
  </model>
</sdf>
